<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".ui.fragment.ProfileFragment">

    <!-- Button container (Vertical arrangement) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="20dp"
        android:gravity="center">

        <!-- Login Button -->
        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#523D35"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/petrona" />

        <!-- Register as EO Button -->
        <Button
            android:id="@+id/register_button_eo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register as Event Organizer"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#523D35"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/petrona" />

        <!-- Register as SPP Button -->
        <Button
            android:id="@+id/register_button_spp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register as Service And Product Provider"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#523D35"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/petrona" />
    </LinearLayout>

</FrameLayout>
