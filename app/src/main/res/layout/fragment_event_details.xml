<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_details_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

        <!-- Event Image -->
        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/event_image"
            android:background="@color/darker_gray"
            android:layout_marginBottom="16dp" />

        <!-- Title row: name + favorite star -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/event_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#333" />

            <ImageButton
                android:id="@+id/favorite_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:contentDescription="@string/toggle_favorite"
                android:src="@drawable/ic_star_outline" />
        </LinearLayout>

        <TextView
            android:id="@+id/event_location"
            android:textSize="16sp"
            android:textColor="#555"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/event_date"
            android:textSize="16sp"
            android:textColor="#555"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/event_description"
            android:textSize="16sp"
            android:textColor="#555"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/event_organizer"
            android:textSize="16sp"
            android:textColor="#007bff"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Chat with organizer -->
        <Button
            android:id="@+id/chat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_with_organizer"
            android:layout_marginTop="12dp"
            android:backgroundTint="#523D35"
            android:textColor="@android:color/white" />

        <!-- Download Event PDF -->
        <Button
            android:id="@+id/event_pdf_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Event PDF"
            android:layout_marginTop="12dp"
            android:backgroundTint="#523D35"
            android:textColor="@android:color/white" />


        <!-- Budget child fragment container -->
        <FrameLayout
            android:id="@+id/budget_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />


        <!-- ===== Event Agenda ===== -->
        <TextView
            android:id="@+id/agenda_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Agenda"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#5a3e3e"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:id="@+id/agenda_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/add_activity_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Activity"
                android:backgroundTint="#523D35"
                android:textColor="@android:color/white"
                android:layout_marginEnd="12dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/export_pdf_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download PDF"
                android:backgroundTint="#523D35"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/agenda_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No activities yet."
            android:textColor="#555"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/agenda_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:paddingTop="4dp"
            android:paddingBottom="16dp"/>


    </LinearLayout>
</ScrollView>
