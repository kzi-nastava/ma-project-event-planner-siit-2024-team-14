<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Product Name -->
        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Product Description -->
        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp" />

        <TextView
            android:text="Category:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <!-- Category Name -->
        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <!-- Footer buttons container -->
        <LinearLayout
            android:id="@+id/footer_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:weightSum="3"
            android:paddingTop="12dp">

            <Button
                android:id="@+id/chat_with_provider_button"
                android:text="Chat with provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#523D35"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>

            <Button
                android:id="@+id/purchase_product_button"
                android:text="Purchase Product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#523D35"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

            <Button
                android:id="@+id/edit_product_button"
                android:text="Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#523D35"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>