<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.fragment.HomeFragment">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">


<!-- Hottest Events Section -->
<TextView
    android:id="@+id/hottest_events_label"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:text="Hottest events in your town"
    android:textSize="20sp"
    android:textColor="#523D35"
    android:fontFamily="@font/petrona"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:layout_marginTop="5dp" />

<!-- Horizontal ScrollView for Hottest Events -->
<HorizontalScrollView
    android:id="@+id/cards"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:layout_marginTop="8dp"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />
</HorizontalScrollView>


<!-- Our Events Section -->
<LinearLayout
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    app:layout_constraintTop_toBottomOf="@id/cards"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- TextView za naslov OUR EVENTS -->
    <TextView
        android:id="@+id/our_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All events"
        android:textSize="20sp"
        android:textColor="#523D35"
        android:fontFamily="@font/petrona"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/cards"/>

    <!-- LinearLayout za pretragu -->
    <LinearLayout
        android:id="@+id/search_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/project_green_bottom_navbar"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <!-- EditText za unos -->
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter search credentials"
            android:background="@android:color/transparent"
            android:textColor="#5E4631"
            android:padding="8dp"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <!-- Ikonica pretrage -->
        <ImageView
            android:id="@+id/iv_search_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_search"
            android:contentDescription="Search Icon"
            app:tint="#523D35"
            android:layout_marginEnd="12dp"/>

        <!-- Ikonica za filter -->
        <ImageButton
            android:id="@+id/btn_toggle_filters"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_filter_list"
            android:contentDescription="Filter Icon"
            app:tint="#523D35" />

    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:id="@+id/filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:visibility="gone">

        <!-- START DATE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textColor="#523D35"
            android:textSize="14sp"
            android:fontFamily="@font/petrona"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/et_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:hint="yyyy-MM-dd"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="#523D35"
            android:fontFamily="@font/petrona"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- END DATE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date"
            android:textColor="#523D35"
            android:textSize="14sp"
            android:fontFamily="@font/petrona"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/et_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:hint="yyyy-MM-dd"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="#523D35"
            android:fontFamily="@font/petrona"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- LOCATION SPINNER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textColor="#523D35"
            android:textSize="14sp"
            android:fontFamily="@font/petrona"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinner_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="12dp" />

        <!-- CATEGORY SPINNER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="#523D35"
            android:textSize="14sp"
            android:fontFamily="@font/petrona"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="12dp" />

        <!-- APPLY FILTERS BUTTON -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_apply_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Filters"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/petrona"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/btn_rounded" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_our_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        tools:listitem="@layout/item_event_card" />

    <LinearLayout
    android:id="@+id/button1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@id/our_events"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/load_more_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Load More"
            android:backgroundTint="#523D35"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/petrona"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


<!-- HOTTEST SERVICES AND PRODUCTS -->
<TextView
    android:id="@+id/hottest_services_label"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:text="Hottest sevices and products"
    android:textSize="20sp"
    android:textColor="#523D35"
    android:fontFamily="@font/petrona"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:layout_marginTop="5dp" />

    <HorizontalScrollView
        android:id="@+id/top5_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/card_container_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
    </HorizontalScrollView>

<!-- ALL SERVICES AND PRODUCTS -->
<LinearLayout
    android:id="@+id/title2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    app:layout_constraintTop_toBottomOf="@id/top5_services"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/our_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All services and products"
        android:textSize="20sp"
        android:textColor="#523D35"
        android:fontFamily="@font/petrona"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/cards"/>

    <!-- LinearLayout za pretragu -->
    <LinearLayout
        android:id="@+id/search_bar_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/project_green_bottom_navbar"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <!-- EditText za unos -->
        <EditText
            android:id="@+id/service_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter search credentials"
            android:background="@android:color/transparent"
            android:textColor="#5E4631"
            android:padding="8dp"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <!-- Ikona pretrage -->
        <ImageView
            android:id="@+id/iv_search_icon2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_search"
            android:contentDescription="Search Icon"
            app:tint="#523D35"
            android:layout_marginEnd="12dp"/>


        <ImageButton
            android:id="@+id/btn_toggle_filters2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_filter_list"
            android:contentDescription="Filter Icon"
            app:tint="#523D35" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filter_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:visibility="gone">

        <!-- START DATE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textColor="#523D35"
            android:textSize="14sp"
            android:fontFamily="@font/petrona"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/service_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:hint="yyyy-MM-dd"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="#523D35"
            android:fontFamily="@font/petrona"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- END DATE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date"
            android:textColor="#523D35"
            android:textSize="14sp"
            android:fontFamily="@font/petrona"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/service_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:hint="yyyy-MM-dd"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="#523D35"
            android:fontFamily="@font/petrona"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- LOCATION SPINNER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textColor="#523D35"
            android:textSize="14sp"
            android:fontFamily="@font/petrona"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_solution_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="12dp" />

        <!-- CATEGORY SPINNER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="#523D35"
            android:textSize="14sp"
            android:fontFamily="@font/petrona"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_solution_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="12dp" />

        <!-- TYPE SPINNER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="#523D35"
            android:textSize="14sp"
            android:fontFamily="@font/petrona"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_solution_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="12dp" />

        <!-- MIN PRICE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Price"
            android:textColor="#523D35"
            android:textSize="14sp"
            android:fontFamily="@font/petrona"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/min_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. 100"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="#523D35"
            android:fontFamily="@font/petrona"
            android:textSize="14sp"
            android:inputType="number"
            android:layout_marginBottom="12dp" />

        <!-- MAX PRICE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Price"
            android:textColor="#523D35"
            android:textSize="14sp"
            android:fontFamily="@font/petrona"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/max_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. 500"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="#523D35"
            android:fontFamily="@font/petrona"
            android:textSize="14sp"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- APPLY FILTERS BUTTON -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_apply_filters2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Filters"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/petrona"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/btn_rounded" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_our_solutions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        tools:listitem="@layout/item_solution_card" />

    <LinearLayout
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/our_events"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/load_more_button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Load More"
            android:backgroundTint="#523D35"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/petrona"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>