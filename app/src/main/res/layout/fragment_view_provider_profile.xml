<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/provider_profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Error -->
    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Failed to load."
        android:textSize="16sp"
        android:textColor="#B00020"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Content -->
    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@android:color/white"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/profile_root_column"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top row: Actions (left) + spacer + Info (right)  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- LEFT: All actions stacked (same as organizer) -->
                <LinearLayout
                    android:id="@+id/actions_column"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="top|end">

                    <Button
                        android:id="@+id/report_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Report User"
                        android:backgroundTint="#523D35"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/chat_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chat"
                        android:backgroundTint="#523D35"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="24dp" />

                    <!-- Self profile actions (visible only for own profile in code) -->
                    <Button
                        android:id="@+id/edit_info_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit profile"
                        android:textColor="#523D35"
                        android:background="@drawable/border"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/change_password_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Change password"
                        android:backgroundTint="#523D35"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/deactivate_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deactivate"
                        android:backgroundTint="#523D35"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- Spacer -->
                <Space
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <!-- RIGHT: Photo + Edit photo + info -->
                <LinearLayout
                    android:id="@+id/info_column"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:gravity="top|end">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/profile_placeholder"
                        android:contentDescription="Provider photo" />

                    <!-- Edit profile photo (same id as organizer so code can reuse) -->
                    <Button
                        android:id="@+id/edit_photo_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit profile photo"
                        android:textColor="#523D35"
                        android:background="@drawable/border"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:id="@+id/company_name"
                        android:text="Company Name"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#523D35"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/role_label"
                        android:text="Service And Product Provider"
                        android:textSize="16sp"
                        android:textColor="#523D35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/email"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/description"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/address"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/city"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/phone_number"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- Favorite Events -->
            <LinearLayout
                android:id="@+id/favorite_events_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/fav_events_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite Events"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#523D35"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/fav_events_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No favorite events yet."
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fav_events_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />
            </LinearLayout>

            <!-- Favorite Solutions -->
            <LinearLayout
                android:id="@+id/favorite_solutions_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/fav_solutions_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite Solutions"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#523D35"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/fav_solutions_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No favorite solutions yet."
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fav_solutions_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
