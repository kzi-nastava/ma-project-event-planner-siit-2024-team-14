<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ProfileEOActivity">

    <!-- Photo Rectangle at the Top (Background) -->
    <View
        android:id="@+id/photoRectangle"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/background_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/profile_picture"
        android:src="@drawable/profilep4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/photoRectangle" />

    <!-- User Info -->
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/project_brown"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/profileImage"
        app:layout_constraintTop_toBottomOf="@id/photoRectangle" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="johndoe@example.com"
        android:textSize="20sp"
        android:textColor="@color/project_brown"
        app:layout_constraintStart_toStartOf="@id/userName"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/userName" />

    <TextView
        android:id="@+id/userPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(123) 456-7890"
        android:textSize="16sp"
        android:textColor="@color/project_brown"
        app:layout_constraintStart_toStartOf="@id/userEmail"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/userEmail" />

    <!-- Edit Button -->
    <Button
        android:id="@+id/editButton"
        android:backgroundTint="@color/project_brown"
        android:textColor="@color/project_beige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="@string/edit_profile"
        app:layout_constraintStart_toStartOf="@id/profileImage"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/profileImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
